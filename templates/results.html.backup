<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analysis Results - Dispatcharr Maid</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
            color: #333;
        }
        
        .container {
            max-width: 1600px;
            margin: 0 auto;
        }
        
        .header {
            text-align: center;
            color: white;
            margin-bottom: 30px;
        }
        
        .header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        
        .nav-buttons {
            text-align: center;
            margin-bottom: 20px;
        }
        
        .btn {
            padding: 12px 30px;
            border: none;
            border-radius: 8px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            background: white;
            color: #667eea;
            margin: 0 10px;
            transition: all 0.3s;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }
        
        .card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        
        .card h2 {
            color: #667eea;
            margin-bottom: 20px;
            font-size: 1.5em;
            border-bottom: 2px solid #667eea;
            padding-bottom: 10px;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin: 20px 0;
        }
        
        .stat-box {
            background: #f7fafc;
            padding: 20px;
            border-radius: 10px;
            border-left: 4px solid #667eea;
        }
        
        .stat-label {
            color: #718096;
            font-size: 0.9em;
            margin-bottom: 5px;
        }
        
        .stat-value {
            font-size: 2em;
            font-weight: bold;
            color: #2d3748;
        }
        
        .stat-value.success {
            color: #38a169;
        }
        
        .stat-value.failed {
            color: #e53e3e;
        }
        
        .chart-container {
            position: relative;
            height: 300px;
            margin: 20px 0;
        }
        
        .chart-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 20px;
            margin: 20px 0;
        }
        
        .chart-card {
            background: #f7fafc;
            padding: 20px;
            border-radius: 10px;
        }
        
        .chart-card h3 {
            color: #2d3748;
            margin-bottom: 15px;
            font-size: 1.1em;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #e2e8f0;
        }
        
        th {
            background: #eef2ff;
            color: #667eea;
            font-weight: 600;
        }
        
        tr:hover {
            background: #f7fafc;
        }
        
        .provider-row {
            cursor: pointer;
        }
        
        .success-badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 0.9em;
            font-weight: 600;
        }
        
        .success-badge.excellent {
            background: #c6f6d5;
            color: #22543d;
        }
        
        .success-badge.good {
            background: #bee3f8;
            color: #2c5282;
        }
        
        .success-badge.fair {
            background: #feebc8;
            color: #7c2d12;
        }
        
        .success-badge.poor {
            background: #fed7d7;
            color: #742a2a;
        }
        
        .alert {
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        
        .alert-info {
            background: #bee3f8;
            color: #2c5282;
        }
        
        .alert-warning {
            background: #feebc8;
            color: #7c2d12;
        }
        
        .alert-error {
            background: #fed7d7;
            color: #742a2a;
        }
        
        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            border-bottom: 2px solid #e2e8f0;
        }
        
        .tab {
            padding: 12px 24px;
            cursor: pointer;
            border: none;
            background: none;
            font-size: 1em;
            font-weight: 600;
            color: #718096;
            border-bottom: 3px solid transparent;
            transition: all 0.3s;
        }
        
        .tab.active {
            color: #667eea;
            border-bottom-color: #667eea;
        }
        
        .tab-content {
            display: none;
        }
        
        .tab-content.active {
            display: block;
        }
        
        .export-buttons {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }
        
        .error-list {
            max-height: 400px;
            overflow-y: auto;
        }
        
        .error-item {
            padding: 12px;
            border-left: 3px solid #e53e3e;
            background: #fff5f5;
            margin-bottom: 10px;
            border-radius: 5px;
        }
        
        .error-type {
            font-weight: 600;
            color: #742a2a;
            margin-bottom: 5px;
        }
        
        .error-count {
            color: #718096;
            font-size: 0.9em;
        }
        
        .loading {
            text-align: center;
            padding: 40px;
            color: #667eea;
        }
        
        .spinner {
            display: inline-block;
            width: 40px;
            height: 40px;
            border: 4px solid rgba(102, 126, 234, 0.3);
            border-top-color: #667eea;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üìä Analysis Results</h1>
            <p>Detailed Stream Quality Report</p>
        </div>
        
        <div class="nav-buttons">
            <button class="btn" onclick="window.location.href='/'">‚Üê Back to Control Panel</button>
            <button class="btn" onclick="exportCSV()">üì• Export CSV</button>
            <button class="btn" onclick="window.print()">üñ®Ô∏è Print Report</button>
        </div>
        
        <div id="loading" class="card">
            <div class="loading">
                <div class="spinner"></div>
                <p>Loading results...</p>
            </div>
        </div>
        
        <div id="content" style="display: none;">
            <!-- Overall Summary -->
            <div class="card">
                <h2>üìà Overall Summary</h2>
                <div class="stats-grid">
                    <div class="stat-box">
                        <div class="stat-label">Total Streams Analyzed</div>
                        <div class="stat-value" id="stat-total">0</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-label">Successful</div>
                        <div class="stat-value success" id="stat-success">0</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-label">Failed</div>
                        <div class="stat-value failed" id="stat-failed">0</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-label">Success Rate</div>
                        <div class="stat-value" id="stat-rate">0%</div>
                    </div>
                </div>
                
                <div id="alerts-container"></div>
            </div>
            
            <!-- Charts -->
            <div class="card">
                <h2>üìä Visual Analysis</h2>
                
                <div class="chart-row">
                    <div class="chart-card">
                        <h3>Quality Distribution</h3>
                        <canvas id="qualityChart"></canvas>
                    </div>
                    <div class="chart-card">
                        <h3>Provider Performance</h3>
                        <canvas id="providerChart"></canvas>
                    </div>
                </div>
                
                <div class="chart-row">
                    <div class="chart-card">
                        <h3>Resolution Distribution</h3>
                        <canvas id="resolutionChart"></canvas>
                    </div>
                    <div class="chart-card">
                        <h3>Error Types</h3>
                        <canvas id="errorChart"></canvas>
                    </div>
                </div>
            </div>
            
            <!-- Tabbed Details -->
            <div class="card">
                <h2>üîç Detailed Breakdown</h2>
                
                <div class="tabs">
                    <button class="tab active" onclick="showTab('providers')">Providers</button>
                    <button class="tab" onclick="showTab('channels')">Channels</button>
                    <button class="tab" onclick="showTab('errors')">Errors</button>
                </div>
                
                <div id="providers-tab" class="tab-content active">
                    <table id="provider-table">
                        <thead>
                            <tr>
                                <th>Provider</th>
                                <th>Total Streams</th>
                                <th>Successful</th>
                                <th>Failed</th>
                                <th>Success Rate</th>
                                <th>Avg Quality</th>
                            </tr>
                        </thead>
                        <tbody id="provider-tbody"></tbody>
                    </table>
                </div>
                
                <div id="channels-tab" class="tab-content">
                    <table id="channel-table">
                        <thead>
                            <tr>
                                <th>Channel</th>
                                <th>Total Streams</th>
                                <th>Successful</th>
                                <th>Failed</th>
                                <th>Success Rate</th>
                            </tr>
                        </thead>
                        <tbody id="channel-tbody"></tbody>
                    </table>
                </div>
                
                <div id="errors-tab" class="tab-content">
                    <div class="error-list" id="error-list"></div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        let resultsData = null;
        
        // Load results on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadResults();
        });
        
        async function loadResults() {
            try {
                const response = await fetch('/api/results/detailed');
                const data = await response.json();
                
                if (data.success) {
                    resultsData = data.results;
                    renderResults();
                    document.getElementById('loading').style.display = 'none';
                    document.getElementById('content').style.display = 'block';
                } else {
                    showError('No results available. Run an analysis first.');
                }
            } catch (error) {
                showError('Failed to load results: ' + error.message);
            }
        }
        
        function renderResults() {
            // Overall stats
            document.getElementById('stat-total').textContent = resultsData.total.toLocaleString();
            document.getElementById('stat-success').textContent = resultsData.successful.toLocaleString();
            document.getElementById('stat-failed').textContent = resultsData.failed.toLocaleString();
            document.getElementById('stat-rate').textContent = resultsData.success_rate + '%';
            
            // Alerts
            renderAlerts();
            
            // Charts
            renderQualityChart();
            renderProviderChart();
            renderResolutionChart();
            renderErrorChart();
            
            // Tables
            renderProviderTable();
            renderChannelTable();
            renderErrorList();
        }
        
        function renderAlerts() {
            const container = document.getElementById('alerts-container');
            let html = '';
            
            // Check for issues
            if (resultsData.success_rate < 90) {
                html += `<div class="alert alert-warning">
                    ‚ö†Ô∏è <strong>Low Success Rate:</strong> Only ${resultsData.success_rate}% of streams are working. Consider reviewing failed providers.
                </div>`;
            }
            
            // Check for bad providers
            const badProviders = Object.entries(resultsData.provider_stats || {})
                .filter(([id, stats]) => stats.success_rate < 70)
                .sort((a, b) => a[1].success_rate - b[1].success_rate);
            
            if (badProviders.length > 0) {
                html += `<div class="alert alert-error">
                    ‚ùå <strong>Problem Providers:</strong> ${badProviders.length} provider(s) have success rates below 70%. 
                    Worst: Provider ${badProviders[0][0]} (${badProviders[0][1].success_rate}%)
                </div>`;
            }
            
            container.innerHTML = html;
        }
        
        function renderQualityChart() {
            const ctx = document.getElementById('qualityChart').getContext('2d');
            const dist = resultsData.quality_distribution || {};
            
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Excellent (90-100)', 'Good (70-89)', 'Fair (50-69)', 'Poor (<50)'],
                    datasets: [{
                        data: [dist.excellent || 0, dist.good || 0, dist.fair || 0, dist.poor || 0],
                        backgroundColor: ['#48bb78', '#4299e1', '#ed8936', '#f56565']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }
        
        function renderProviderChart() {
            const ctx = document.getElementById('providerChart').getContext('2d');
            const providers = resultsData.provider_stats || {};
            
            // Sort by success rate
            const sorted = Object.entries(providers)
                .sort((a, b) => b[1].success_rate - a[1].success_rate)
                .slice(0, 10); // Top 10
            
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: sorted.map(([id, _]) => `Provider ${id}`),
                    datasets: [{
                        label: 'Success Rate (%)',
                        data: sorted.map(([_, stats]) => stats.success_rate),
                        backgroundColor: sorted.map(([_, stats]) => {
                            if (stats.success_rate >= 90) return '#48bb78';
                            if (stats.success_rate >= 70) return '#4299e1';
                            if (stats.success_rate >= 50) return '#ed8936';
                            return '#f56565';
                        })
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }
        
        function renderResolutionChart() {
            const ctx = document.getElementById('resolutionChart').getContext('2d');
            const resolutions = resultsData.resolution_distribution || {};
            
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: Object.keys(resolutions),
                    datasets: [{
                        data: Object.values(resolutions),
                        backgroundColor: ['#667eea', '#764ba2', '#f093fb', '#4facfe', '#00f2fe']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }
        
        function renderErrorChart() {
            const ctx = document.getElementById('errorChart').getContext('2d');
            const errors = resultsData.error_types || {};
            
            // Take top 5 errors
            const sorted = Object.entries(errors)
                .sort((a, b) => b[1] - a[1])
                .slice(0, 5);
            
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: sorted.map(([type, _]) => type.substring(0, 30)),
                    datasets: [{
                        label: 'Count',
                        data: sorted.map(([_, count]) => count),
                        backgroundColor: '#f56565'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }
        
        function renderProviderTable() {
            const tbody = document.getElementById('provider-tbody');
            const providers = resultsData.provider_stats || {};
            
            // Sort by success rate (worst first)
            const sorted = Object.entries(providers)
                .sort((a, b) => a[1].success_rate - b[1].success_rate);
            
            tbody.innerHTML = sorted.map(([id, stats]) => {
                const badgeClass = stats.success_rate >= 90 ? 'excellent' : 
                                  stats.success_rate >= 70 ? 'good' :
                                  stats.success_rate >= 50 ? 'fair' : 'poor';
                
                return `
                    <tr class="provider-row">
                        <td>Provider ${id}</td>
                        <td>${stats.total}</td>
                        <td style="color: #38a169;">${stats.successful}</td>
                        <td style="color: #e53e3e;">${stats.failed}</td>
                        <td><span class="success-badge ${badgeClass}">${stats.success_rate}%</span></td>
                        <td>${stats.avg_quality}</td>
                    </tr>
                `;
            }).join('');
        }
        
        function renderChannelTable() {
            const tbody = document.getElementById('channel-tbody');
            const channels = resultsData.channel_stats || {};
            
            // Sort by channel number
            const sorted = Object.entries(channels)
                .sort((a, b) => parseInt(a[0]) - parseInt(b[0]));
            
            tbody.innerHTML = sorted.map(([num, stats]) => {
                const badgeClass = stats.success_rate >= 90 ? 'excellent' : 
                                  stats.success_rate >= 70 ? 'good' :
                                  stats.success_rate >= 50 ? 'fair' : 'poor';
                
                return `
                    <tr>
                        <td><strong>#${num}</strong> ${stats.name}</td>
                        <td>${stats.total}</td>
                        <td style="color: #38a169;">${stats.successful}</td>
                        <td style="color: #e53e3e;">${stats.failed}</td>
                        <td><span class="success-badge ${badgeClass}">${stats.success_rate}%</span></td>
                    </tr>
                `;
            }).join('');
        }
        
        function renderErrorList() {
            const container = document.getElementById('error-list');
            const errors = resultsData.error_types || {};
            
            if (Object.keys(errors).length === 0) {
                container.innerHTML = '<div class="alert alert-info">No errors recorded! üéâ</div>';
                return;
            }
            
            // Sort by count
            const sorted = Object.entries(errors)
                .sort((a, b) => b[1] - a[1]);
            
            container.innerHTML = sorted.map(([type, count]) => `
                <div class="error-item">
                    <div class="error-type">${type}</div>
                    <div class="error-count">${count} occurrence${count > 1 ? 's' : ''}</div>
                </div>
            `).join('');
        }
        
        function showTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            // Show selected tab
            event.target.classList.add('active');
            document.getElementById(tabName + '-tab').classList.add('active');
        }
        
        function exportCSV() {
            window.open('/api/results/csv', '_blank');
        }
        
        function showError(message) {
            document.getElementById('loading').innerHTML = `
                <div class="alert alert-error">
                    ‚ùå ${message}
                </div>
                <div style="text-align: center; margin-top: 20px;">
                    <button class="btn" onclick="window.location.href='/'">‚Üê Back to Control Panel</button>
                </div>
            `;
        }
    </script>
</body>
</html>
